{
  "id": 94,
  "name": "الشرح",
  "transliteration": "Ash-Sharh",
  "translation": "The Relief",
  "type": "meccan",
  "total_verses": 8,
  "verses": [
    {
      "id": 1,
      "text": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
      "translation": "(ऐ नबी!) क्या हमने तुम्हारे लिए तुम्हारा सीना नहीं खोल दिया?",
      "transliteration": "Alam nashrah laka sadraka"
    },
    {
      "id": 2,
      "text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
      "translation": "और हमने आपसे आपका बोझ उतार दिया।",
      "transliteration": "WawadaAAna AAanka wizraka"
    },
    {
      "id": 3,
      "text": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
      "translation": "जिसने आपकी कमर तोड़ दी थी।",
      "transliteration": "Allathee anqada thahraka"
    },
    {
      "id": 4,
      "text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
      "translation": "और हमने आपके लिए आपका ज़िक्र ऊँचा कर दिया।",
      "transliteration": "WarafaAAna laka thikraka"
    },
    {
      "id": 5,
      "text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
      "translation": "निःसंदेह हर कठिनाई के साथ एक आसानी है।",
      "transliteration": "Fainna maAAa alAAusri yusran"
    },
    {
      "id": 6,
      "text": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
      "translation": "निःसंदेह (उस) कठिनाई के साथ एक (और) आसानी है।",
      "transliteration": "Inna maAAa alAAusri yusran"
    },
    {
      "id": 7,
      "text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
      "translation": "अतः, जब आप फ़ारिग़ हो जाएँ, तो परिश्रम करें।",
      "transliteration": "Faitha faraghta fainsab"
    },
    {
      "id": 8,
      "text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
      "translation": "और अपने पालनहार की ओर अपना ध्यान लगाएँ।",
      "transliteration": "Waila rabbika fairghab"
    }
  ]
}