{
  "id": 81,
  "name": "التكوير",
  "transliteration": "At-Takwir",
  "translation": "The Overthrowing",
  "type": "meccan",
  "total_verses": 29,
  "verses": [
    {
      "id": 1,
      "text": "إِذَا ٱلشَّمۡسُ كُوِّرَتۡ",
      "translation": "जब सूर्य लपेट दिया जाएगा।",
      "transliteration": "Itha alshshamsu kuwwirat"
    },
    {
      "id": 2,
      "text": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ",
      "translation": "और जब सितारे प्रकाश रहित हो जाएँगे।",
      "transliteration": "Waitha alnnujoomu inkadarat"
    },
    {
      "id": 3,
      "text": "وَإِذَا ٱلۡجِبَالُ سُيِّرَتۡ",
      "translation": "और जब पर्वत चलाए जाएँगे।",
      "transliteration": "Waitha aljibalu suyyirat"
    },
    {
      "id": 4,
      "text": "وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ",
      "translation": "और जब गाभिन ऊँटनियाँ छोड़ दी जाएँगी।",
      "transliteration": "Waitha alAAisharu AAuttilat"
    },
    {
      "id": 5,
      "text": "وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ",
      "translation": "और जब जंगली जानवर एकत्रित किए जाएँगे।",
      "transliteration": "Waitha alwuhooshu hushirat"
    },
    {
      "id": 6,
      "text": "وَإِذَا ٱلۡبِحَارُ سُجِّرَتۡ",
      "translation": "और जब सागर भड़काए जाएँगे।",
      "transliteration": "Waitha albiharu sujjirat"
    },
    {
      "id": 7,
      "text": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ",
      "translation": "और जब प्राण मिला दिए जाएँगे।",
      "transliteration": "Waitha alnnufoosu zuwwijat"
    },
    {
      "id": 8,
      "text": "وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ",
      "translation": "और जब जीवित गाड़ी गई लड़की से पूछा जाएगा।",
      "transliteration": "Waitha almawoodatu suilat"
    },
    {
      "id": 9,
      "text": "بِأَيِّ ذَنۢبٖ قُتِلَتۡ",
      "translation": "कि वह किस अपराध के कारण मारी गई?",
      "transliteration": "Biayyi thanbin qutilat"
    },
    {
      "id": 10,
      "text": "وَإِذَا ٱلصُّحُفُ نُشِرَتۡ",
      "translation": "तथा जब कर्मपत्र (आमाल नामे) फैला दिए जाएँगे।",
      "transliteration": "Waitha alssuhufu nushirat"
    },
    {
      "id": 11,
      "text": "وَإِذَا ٱلسَّمَآءُ كُشِطَتۡ",
      "translation": "और जब आकाश उधेड़ दिया जाएगा।",
      "transliteration": "Waitha alssamao kushitat"
    },
    {
      "id": 12,
      "text": "وَإِذَا ٱلۡجَحِيمُ سُعِّرَتۡ",
      "translation": "और जब जहन्नम दहकाई जाएगी।",
      "transliteration": "Waitha aljaheemu suAAAAirat"
    },
    {
      "id": 13,
      "text": "وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ",
      "translation": "और जब जन्नत क़रीब लाई जाएगी।",
      "transliteration": "Waitha aljannatu ozlifat"
    },
    {
      "id": 14,
      "text": "عَلِمَتۡ نَفۡسٞ مَّآ أَحۡضَرَتۡ",
      "translation": "तो प्रत्येक प्राणी जान लेगा कि वह क्या लेकर आया है।",
      "transliteration": "AAalimat nafsun ma ahdarat"
    },
    {
      "id": 15,
      "text": "فَلَآ أُقۡسِمُ بِٱلۡخُنَّسِ",
      "translation": "मैं क़सम खाता हूँ पीछे हटने वाले सितारों की।",
      "transliteration": "Fala oqsimu bialkhunnasi"
    },
    {
      "id": 16,
      "text": "ٱلۡجَوَارِ ٱلۡكُنَّسِ",
      "translation": "चलने वाले, छिप जाने वाले तारों की।",
      "transliteration": "Aljawari alkunnasi"
    },
    {
      "id": 17,
      "text": "وَٱلَّيۡلِ إِذَا عَسۡعَسَ",
      "translation": "और रात की (क़सम), जब वह आती और जाती है।",
      "transliteration": "Waallayli itha AAasAAasa"
    },
    {
      "id": 18,
      "text": "وَٱلصُّبۡحِ إِذَا تَنَفَّسَ",
      "translation": "तथा सुबह की, जब वह रौशन होने लगे।",
      "transliteration": "Waalssubhi itha tanaffasa"
    },
    {
      "id": 19,
      "text": "إِنَّهُۥ لَقَوۡلُ رَسُولٖ كَرِيمٖ",
      "translation": "निःसंदेह यह (क़ुरआन) एक आदरणीय संदेशवाहक की लाई हुई वाणी है।",
      "transliteration": "Innahu laqawlu rasoolin kareemin"
    },
    {
      "id": 20,
      "text": "ذِي قُوَّةٍ عِندَ ذِي ٱلۡعَرۡشِ مَكِينٖ",
      "translation": "जो शक्तिशाली है, अर्श (सिंहासन) वाले के पास उच्च पद वाला है।",
      "transliteration": "Thee quwwatin AAinda thee alAAarshi makeenin"
    },
    {
      "id": 21,
      "text": "مُّطَاعٖ ثَمَّ أَمِينٖ",
      "translation": "उसकी वहाँ (आसमानों में) बात मानी जाती है और बड़ा विश्वसनीय है।",
      "transliteration": "MutaAAin thamma ameenin"
    },
    {
      "id": 22,
      "text": "وَمَا صَاحِبُكُم بِمَجۡنُونٖ",
      "translation": "और तुम्हारा साथी कोई दीवाना नहीं हैं।",
      "transliteration": "Wama sahibukum bimajnoonin"
    },
    {
      "id": 23,
      "text": "وَلَقَدۡ رَءَاهُ بِٱلۡأُفُقِ ٱلۡمُبِينِ",
      "translation": "और निश्चय उन्होंने उस (जिबरील) को स्पष्ट क्षितिज पर देखा है।",
      "transliteration": "Walaqad raahu bialofuqi almubeeni"
    },
    {
      "id": 24,
      "text": "وَمَا هُوَ عَلَى ٱلۡغَيۡبِ بِضَنِينٖ",
      "translation": "और वह परोक्ष (ग़ैब) की बातें बताने में कृपण नहीं हैं।",
      "transliteration": "Wama huwa AAala alghaybi bidaneenin"
    },
    {
      "id": 25,
      "text": "وَمَا هُوَ بِقَوۡلِ شَيۡطَٰنٖ رَّجِيمٖ",
      "translation": "और यह (क़ुरआन) किसी धिक्कारे हुए शैतान की वाणी नहीं है।",
      "transliteration": "Wama huwa biqawli shaytanin rajeemin"
    },
    {
      "id": 26,
      "text": "فَأَيۡنَ تَذۡهَبُونَ",
      "translation": "फिर तुम कहाँ जा रहे हो?",
      "transliteration": "Faayna tathhaboona"
    },
    {
      "id": 27,
      "text": "إِنۡ هُوَ إِلَّا ذِكۡرٞ لِّلۡعَٰلَمِينَ",
      "translation": "यह तो समस्त संसार वालों के लिए एक उपदेश है।",
      "transliteration": "In huwa illa thikrun lilAAalameena"
    },
    {
      "id": 28,
      "text": "لِمَن شَآءَ مِنكُمۡ أَن يَسۡتَقِيمَ",
      "translation": "उसके लिए, जो तुममें से सीधे मार्ग पर चलना चाहे।",
      "transliteration": "Liman shaa minkum an yastaqeema"
    },
    {
      "id": 29,
      "text": "وَمَا تَشَآءُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلۡعَٰلَمِينَ",
      "translation": "तथा तुम कुछ नहीं चाह सकते, सिवाय इसके कि सर्व संसार का पालनहार अल्लाह चाहे।",
      "transliteration": "Wama tashaoona illa an yashaa Allahu rabbu alAAalameena"
    }
  ]
}