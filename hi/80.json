{
  "id": 80,
  "name": "عبس",
  "transliteration": "'Abasa",
  "translation": "He Frowned",
  "type": "meccan",
  "total_verses": 42,
  "verses": [
    {
      "id": 1,
      "text": "عَبَسَ وَتَوَلَّىٰٓ",
      "translation": "उस (नबी) ने त्योरी चढ़ाई और मुँह फेर लिया।",
      "transliteration": "AAabasa watawalla"
    },
    {
      "id": 2,
      "text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ",
      "translation": "इस कारण कि उनके पास अंधा आया।",
      "transliteration": "An jaahu alaAAma"
    },
    {
      "id": 3,
      "text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ",
      "translation": "और आपको क्या मालूम शायद वह पवित्रता प्राप्त कर ले।",
      "transliteration": "Wama yudreeka laAAallahu yazzakka"
    },
    {
      "id": 4,
      "text": "أَوۡ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰٓ",
      "translation": "या नसीहत ग्रहण करे, तो वह नसीहत उसे लाभ दे।",
      "transliteration": "Aw yaththakkaru fatanfaAAahu alththikra"
    },
    {
      "id": 5,
      "text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ",
      "translation": "लेकिन जो बेपरवाह हो गया।",
      "transliteration": "Amma mani istaghna"
    },
    {
      "id": 6,
      "text": "فَأَنتَ لَهُۥ تَصَدَّىٰ",
      "translation": "तो आप उसके पीछे पड़ रहे हैं।",
      "transliteration": "Faanta lahu tasadda"
    },
    {
      "id": 7,
      "text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ",
      "translation": "हालाँकि आपपर कोई दोष नहीं कि वह पवित्रता ग्रहण नहीं करता।",
      "transliteration": "Wama AAalayka alla yazzakka"
    },
    {
      "id": 8,
      "text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ",
      "translation": "लेकिन जो व्यक्ति आपके पास दौड़ता हुआ आया।",
      "transliteration": "Waamma man jaaka yasAAa"
    },
    {
      "id": 9,
      "text": "وَهُوَ يَخۡشَىٰ",
      "translation": "और वह डर (भी) रहा है।",
      "transliteration": "Wahuwa yakhsha"
    },
    {
      "id": 10,
      "text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ",
      "translation": "तो आप उसकी ओर ध्यान नहीं देते।",
      "transliteration": "Faanta AAanhu talahha"
    },
    {
      "id": 11,
      "text": "كَلَّآ إِنَّهَا تَذۡكِرَةٞ",
      "translation": "ऐसा हरगिज़ नहीं चाहिए, यह (क़ुरआन) तो एक उपदेश है।",
      "transliteration": "Kalla innaha tathkiratun"
    },
    {
      "id": 12,
      "text": "فَمَن شَآءَ ذَكَرَهُۥ",
      "translation": "अतः जो चाहे, उसे याद करे।",
      "transliteration": "Faman shaa thakarahu"
    },
    {
      "id": 13,
      "text": "فِي صُحُفٖ مُّكَرَّمَةٖ",
      "translation": "(यह क़ुरआन) सम्मानित सहीफ़ों (ग्रंथों) में है।",
      "transliteration": "Fee suhufin mukarramatin"
    },
    {
      "id": 14,
      "text": "مَّرۡفُوعَةٖ مُّطَهَّرَةِۭ",
      "translation": "जो उच्च स्थान वाले तथा पवित्र हैं।",
      "transliteration": "MarfooAAatin mutahharatin"
    },
    {
      "id": 15,
      "text": "بِأَيۡدِي سَفَرَةٖ",
      "translation": "ऐसे लिखने वालों (फ़रिश्तों) के हाथों में हैं।",
      "transliteration": "Biaydee safaratin"
    },
    {
      "id": 16,
      "text": "كِرَامِۭ بَرَرَةٖ",
      "translation": "जो माननीय और नेक हैं।",
      "transliteration": "Kiramin bararatin"
    },
    {
      "id": 17,
      "text": "قُتِلَ ٱلۡإِنسَٰنُ مَآ أَكۡفَرَهُۥ",
      "translation": "सर्वनाश हो मनुष्य का, वह कितना कृतघ्न (नाशुक्रा) है।",
      "transliteration": "Qutila alinsanu ma akfarahu"
    },
    {
      "id": 18,
      "text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ",
      "translation": "(अल्लाह ने) उसे किस चीज़ से पैदा किया?",
      "transliteration": "Min ayyi shayin khalaqahu"
    },
    {
      "id": 19,
      "text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ",
      "translation": "एक नुत्फ़े (वीर्य) से उसे पैदा किया, फिर विभिन्न चरणों में उसकी रचना की।",
      "transliteration": "Min nutfatin khalaqahu faqaddarahu"
    },
    {
      "id": 20,
      "text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ",
      "translation": "फिर उसके लिए रास्ता आसान कर दिया।",
      "transliteration": "Thumma alssabeela yassarahu"
    },
    {
      "id": 21,
      "text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ",
      "translation": "फिर उसे मृत्यु दी, फिर उसे क़ब्र में रखवाया।",
      "transliteration": "Thumma amatahu faaqbarahu"
    },
    {
      "id": 22,
      "text": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ",
      "translation": "फिर जब वह चाहेगा, उसे उठाएगा।",
      "transliteration": "Thumma itha shaa ansharahu"
    },
    {
      "id": 23,
      "text": "كَلَّا لَمَّا يَقۡضِ مَآ أَمَرَهُۥ",
      "translation": "हरगिज़ नहीं, अभी तक उसने उसे पूरा नहीं किया, जिसका अल्लाह ने उसे आदेश दिया था।",
      "transliteration": "Kalla lamma yaqdi ma amarahu"
    },
    {
      "id": 24,
      "text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ",
      "translation": "अतः इनसान को चाहिए कि अपने भोजन को देखे।",
      "transliteration": "Falyanthuri alinsanu ila taAAamihi"
    },
    {
      "id": 25,
      "text": "أَنَّا صَبَبۡنَا ٱلۡمَآءَ صَبّٗا",
      "translation": "कि हमने ख़ूब पानी बरसाया।",
      "transliteration": "Anna sababna almaa sabban"
    },
    {
      "id": 26,
      "text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقّٗا",
      "translation": "फिर हमने धरती को विशेष रूप से फाड़ा।",
      "transliteration": "Thumma shaqaqna alarda shaqqan"
    },
    {
      "id": 27,
      "text": "فَأَنۢبَتۡنَا فِيهَا حَبّٗا",
      "translation": "फिर हमने उसमें अनाज उगाया।",
      "transliteration": "Faanbatna feeha habban"
    },
    {
      "id": 28,
      "text": "وَعِنَبٗا وَقَضۡبٗا",
      "translation": "तथा अंगूर और (मवेशियों का) चारा।",
      "transliteration": "WaAAinaban waqadban"
    },
    {
      "id": 29,
      "text": "وَزَيۡتُونٗا وَنَخۡلٗا",
      "translation": "तथा ज़ैतून और खजूर के पेड़।",
      "transliteration": "Wazaytoonan wanakhlan"
    },
    {
      "id": 30,
      "text": "وَحَدَآئِقَ غُلۡبٗا",
      "translation": "तथा घने बाग़।",
      "transliteration": "Wahadaiqa ghulban"
    },
    {
      "id": 31,
      "text": "وَفَٰكِهَةٗ وَأَبّٗا",
      "translation": "तथा फल और चारा।",
      "transliteration": "Wafakihatan waabban"
    },
    {
      "id": 32,
      "text": "مَّتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ",
      "translation": "तुम्हारे लिए तथा तुम्हारे पशुओं के लिए जीवन-सामग्री के रूप में।",
      "transliteration": "MataAAan lakum walianAAamikum"
    },
    {
      "id": 33,
      "text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ",
      "translation": "तो जब कानों को बहरा कर देने वाली प्रचंड आवाज़ (क़ियामत) आ जाएगी।",
      "transliteration": "Faitha jaati alssakhkhatu"
    },
    {
      "id": 34,
      "text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِ",
      "translation": "जिस दिन इनसान अपने भाई से भागेगा।",
      "transliteration": "Yawma yafirru almaro min akheehi"
    },
    {
      "id": 35,
      "text": "وَأُمِّهِۦ وَأَبِيهِ",
      "translation": "तथा अपनी माता और अपने पिता (से)।",
      "transliteration": "Waommihi waabeehi"
    },
    {
      "id": 36,
      "text": "وَصَٰحِبَتِهِۦ وَبَنِيهِ",
      "translation": "तथा अपनी पत्नी और अपने बेटों से।",
      "transliteration": "Wasahibatihi wabaneehi"
    },
    {
      "id": 37,
      "text": "لِكُلِّ ٱمۡرِيٕٖ مِّنۡهُمۡ يَوۡمَئِذٖ شَأۡنٞ يُغۡنِيهِ",
      "translation": "उस दिन उनमें से प्रत्येक व्यक्ति की ऐसी स्थिति होगी, जो उसे (दूसरों से) बेपरवाह कर देगी।",
      "transliteration": "Likulli imriin minhum yawmaithin shanun yughneehi"
    },
    {
      "id": 38,
      "text": "وُجُوهٞ يَوۡمَئِذٖ مُّسۡفِرَةٞ",
      "translation": "उस दिन कुछ चेहरे रौशन होंगे।",
      "transliteration": "Wujoohun yawmaithin musfiratun"
    },
    {
      "id": 39,
      "text": "ضَاحِكَةٞ مُّسۡتَبۡشِرَةٞ",
      "translation": "हँसते हुए, प्रसन्न होंगे।",
      "transliteration": "Dahikatun mustabshiratun"
    },
    {
      "id": 40,
      "text": "وَوُجُوهٞ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةٞ",
      "translation": "तथा कुछ चेहरों उस दिन धूल से ग्रस्त होंगे।",
      "transliteration": "Wawujoohun yawmaithin AAalayha ghabaratun"
    },
    {
      "id": 41,
      "text": "تَرۡهَقُهَا قَتَرَةٌ",
      "translation": "उनपर कालिमा छाई होगी।",
      "transliteration": "Tarhaquha qataratun"
    },
    {
      "id": 42,
      "text": "أُوْلَـٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ",
      "translation": "वही काफ़िर और कुकर्मी लोग हैं।",
      "transliteration": "Olaika humu alkafaratu alfajaratu"
    }
  ]
}