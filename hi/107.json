{
  "id": 107,
  "name": "الماعون",
  "transliteration": "Al-Ma'un",
  "translation": "The Small kindnesses",
  "type": "meccan",
  "total_verses": 7,
  "verses": [
    {
      "id": 1,
      "text": "أَرَءَيۡتَ ٱلَّذِي يُكَذِّبُ بِٱلدِّينِ",
      "translation": "(ऐ नबी!) क्या आपने उसे देखा, जो बदले के दिन को झुठलाता है?",
      "transliteration": "Araayta allathee yukaththibu bialddeeni"
    },
    {
      "id": 2,
      "text": "فَذَٰلِكَ ٱلَّذِي يَدُعُّ ٱلۡيَتِيمَ",
      "translation": "तो यही है, जो अनाथ (यतीम) को धक्के देता है।",
      "transliteration": "Fathalika allathee yaduAAAAu alyateema"
    },
    {
      "id": 3,
      "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِينِ",
      "translation": "तथा ग़रीब को खाना खिलाने के लिए प्रोत्साहित नहीं करता है।",
      "transliteration": "Wala yahuddu AAala taAAami almiskeeni"
    },
    {
      "id": 4,
      "text": "فَوَيۡلٞ لِّلۡمُصَلِّينَ",
      "translation": "तो विनाश है उन नमाज़ियों के लिए,",
      "transliteration": "Fawaylun lilmusalleena"
    },
    {
      "id": 5,
      "text": "ٱلَّذِينَ هُمۡ عَن صَلَاتِهِمۡ سَاهُونَ",
      "translation": "जो अपनी नमाज़ से लापरवाह हैं।",
      "transliteration": "Allatheena hum AAan salatihim sahoona"
    },
    {
      "id": 6,
      "text": "ٱلَّذِينَ هُمۡ يُرَآءُونَ",
      "translation": "वे जो दिखावा करते हैं।",
      "transliteration": "Allatheena hum yuraoona"
    },
    {
      "id": 7,
      "text": "وَيَمۡنَعُونَ ٱلۡمَاعُونَ",
      "translation": "तथा साधारण बरतने की चीज़ भी माँगने से नहीं देते।",
      "transliteration": "WayamnaAAoona almaAAoona"
    }
  ]
}